{
  "name": "acc-telemetry",
  "version": "2.0.0",
  "private": true,
  "author": "Rajavenkateshwaran S <rajavn6789@gmail.com>",
  "description": "A simple telemetry tool for ACC",
  "homepage": "./",
  "main": "./public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@visx/legend": "^2.2.2",
    "@visx/xychart": "^2.9.0",
    "antd": "^4.18.5",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "recharts": "^2.0.9",
    "save": "^2.4.0",
    "web-vitals": "^1.0.1",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "electron-is-dev": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 electron version",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "acc-telemetry",
    "productName": "ACCTelemetry",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "ACCTelemetry-installer-V${version}.${ext}",
      "uninstallDisplayName": "ACCTelemetry",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true
    }
  }
}
